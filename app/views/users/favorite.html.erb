<div class="w980">
  <h1>お気に入り一覧</h1>
  <p><%= notice %></p>

  <% if @favorites.present? %>
    <P>お気に入りしているPicture</p>

      <% @favorites.each do |favo| %>
        <%= favo.user.name %>
        <%= favo.picture.title %>
        <%= image_tag favo.picture.image_pict.to_s %>
        <%= link_to '詳細を見る', picture_path(favo.picture.id) %>
      <% end %>
  <% else %>
    <P>お気に入りしているPictureはありません</p>
  <% end %>
</div>
