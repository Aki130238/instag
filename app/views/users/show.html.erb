<h1>user詳細画面</h1>
<p>タイトル: <%= @user.name %></p>
<p>内容: <%= @user.email %></p>
<%= link_to "お気に入りリスト", favorite_user_path(@user.id) %>
<% if @user.id == current_user.id %>
  <%= link_to "編集する", edit_user_path(@user.id) %>
  <%= link_to 'ユーザー削除', user_path(@user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
<% end %>
